@model IEnumerable<Moja_Aplikacija.Entity.Writer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<input class = "form-control" placeholder="pretraga" onkeyup="searchWriter(event,this.value)";/>
<table class="table">
    <thead>
        <tr>
            <th style="width:40px">
                @Html.DisplayNameFor(model => model.First().ImageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().LastName)
            </th>
            
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
           <td class="text-center">
                <img src="@item.ImagePath"  width="40" />
           </td>
           
           <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
         
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            
            
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.WriterId  }) |
               
                @Html.ActionLink("Delete", "Delete", new {  id=item.WriterId },new {onclik = "return deleteWriter()"})
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts{
    <script>
        function deleteWriter(){
            return confirm("Da li ste sigurni?")
        }
        function searchWriter(e,filter){
            if(e.keyCode == 13){
                window.location.href = "/Writer/Index?filter=" + filter;
            }
        }
    </script>
}
